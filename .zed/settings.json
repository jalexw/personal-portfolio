{
  "terminal": {
    "shell": {
      "program": "/bin/zsh"
    }
  },
  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "classFunctions": ["cn"],
        "experimental": {
          "classRegex": ["[cls|className]\\s\\:\\=\\s\"([^\"]*)"]
        }
      }
    },
    "eslint": {
      "settings": {
        "workingDirectories": [
          {
            "mode": "auto"
          }
        ],
        "validate": [
          "javascript",
          "javascriptreact",
          "typescript",
          "typescriptreact"
        ],
        "run": "onSave"
      }
    }
  }
}
